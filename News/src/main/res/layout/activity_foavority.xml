<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_foavority"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:orientation="horizontal"
       android:gravity="center"
       android:background="@mipmap/normalbutton_normal"
       >
       <ImageView
          android:id="@+id/up_home_left_img"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/ic_title_home_default"
           android:layout_marginLeft="20dp"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="资讯"
           android:layout_weight="1"
           android:gravity="center"
           />
       <Button
           android:id="@+id/commit_acount_btn"
           android:layout_width="70dp"
           android:layout_height="40dp"
           android:text="跟帖数"
           android:layout_marginRight="15dp"

           />
       <ImageView
           android:id="@+id/up_btn_right_img"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/news_menu"
          android:layout_marginRight="10dp"
           />

       </LinearLayout>
    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></WebView>
    </LinearLayout>