<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_on_frag_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar_suer_number"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/user_number_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/title_bar_suer_number"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/edt_frame"
        android:hint="请输入邮箱账户:"
        android:singleLine="true" />

    <EditText
        android:id="@+id/login_on_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/user_number_edt"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edt_frame"
        android:hint="请输入昵称:"
        />

    <EditText
        android:id="@+id/login_on_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/login_on_username"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edt_frame"
        android:hint="请输入密码:"
        android:password="true" />
    <!--这里说的相对于边界指的是相对于距离他最近的控件的边界-->

    <TextView
        android:id="@+id/log_on_txt_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login_on_pwd"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:background="#9a0202"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="26sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/log_on_txt_install"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <CheckBox
            android:id="@+id/login_on_chb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我同意‘服务条款‘和网络用户隐私保护和个人信息利用政策"
            android:textSize="20dp"
            android:layout_marginRight="20dp"

            />

    </LinearLayout>

</RelativeLayout>