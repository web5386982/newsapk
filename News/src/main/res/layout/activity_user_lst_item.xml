<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/user_core_img_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/send" />

    >

    <TextView
        android:id="@+id/user_core_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_core_img_photo"
        android:layout_alignTop="@+id/user_core_img_photo"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="Happy   New   Year!"
        android:textColor="#000000"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/user_core_user_intergrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_core_user_name"
        android:layout_alignTop="@+id/user_core_user_name"
        android:layout_marginTop="40dp"
        android:text="积分:"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/user_core_intergrate_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_core_user_intergrate"
        android:layout_alignTop="@+id/user_core_user_intergrate"
        android:layout_marginLeft="40dp"
        android:text="积分数"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>