<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_slidingmenu_left">
    <ImageView
        android:id="@+id/right_menu_circle_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:id="@+id/right_menu_text_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立刻登陆"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/right_menu_circle_img"
        android:layout_marginTop="150dp"
        />

    <TextView
        android:id="@+id/version_update_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新版本"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
       android:layout_alignBottom="@+id/layout_right_include"
        android:layout_marginBottom="60dp"

        />
    <RelativeLayout
        android:id="@+id/layout_right_include"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share_little_bg"
            android:layout_centerInParent="true"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fun_share_weixin"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="34dp"
                android:layout_height="33dp"
                android:src="@mipmap/addimport_qq"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fun_share_friends"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/right_fun_share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fun_share_weibo"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>