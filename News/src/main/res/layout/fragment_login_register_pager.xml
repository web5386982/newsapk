<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_frag_install"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/title_bar_id"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/login_user_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/edt_frame"
        android:layout_alignTop="@+id/title_bar_id"
        android:layout_marginTop="100dp"
        android:singleLine="true"
        android:hint="请输入账号:"
        />
    <EditText
        android:id="@+id/login_pwd_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/edt_frame"
        android:layout_alignTop="@+id/login_user_edt"
        android:layout_marginTop="60dp"
        android:password="true"
        android:hint="请输入密码:"
        />
        <!--这里说的相对于边界指的是相对于距离他最近的控件的边界-->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignTop="@+id/login_pwd_edt"
        android:layout_marginTop="80dp"
        >
        <TextView
            android:id="@+id/login_login_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="26sp"
            android:textColor="#ffffff"
            android:background="#9a0202"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:id="@+id/login_on_user_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="26sp"
            android:textColor="#ffffff"
            android:background="#9a0202"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/login_on_user_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="26sp"
            android:textColor="#ffffff"
            android:background="#9a0202"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:layout_marginRight="20dp"

            />

    </LinearLayout>
</RelativeLayout>