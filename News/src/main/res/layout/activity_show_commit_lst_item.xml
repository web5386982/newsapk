<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_show_commit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
   >
    <ImageView
        android:id="@+id/commit_user_portrait"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/commit_user_portrait"
        android:layout_marginLeft="65dp"
        >
    <TextView
        android:id="@+id/commit_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论者姓名"/>

    <TextView
        android:id="@+id/commit_user_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论时间"/>
    <TextView
        android:id="@+id/commit_user_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论内容"/>
      </LinearLayout>
</RelativeLayout>
